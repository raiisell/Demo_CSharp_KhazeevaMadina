<Window x:Class="DemoAppCSharp.MethodFour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAppCSharp"
        mc:Ignorable="d"
        FontFamily="Bahnschrift Light SemiCondensed"
        Icon="/images/Новые технологии.ico"
        Title="Четвертый метод" Height="354" Width="452">
    <Grid>
        <Label Content="Тип продукции:" HorizontalAlignment="Left" Margin="82,73,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox x:Name="cb_productType" HorizontalAlignment="Left" Margin="226,74,0,0" VerticalAlignment="Top" Width="160" Height="27"  />
        <Label Content="Расчет" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" Background="#FFBBDCFA"/>
        <Label Content="Тип материала:" HorizontalAlignment="Left" Margin="82,115,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox x:Name="cb_materialType" HorizontalAlignment="Left" Margin="226,116,0,0" VerticalAlignment="Top" Width="160" Height="27" />
        <Label Content="Количество на складе:" HorizontalAlignment="Left" Margin="82,156,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="tb_quantityInWarehouse" HorizontalAlignment="Left" Margin="226,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="22" FontSize="14"/>
        <Label Content="Требуемое количество:" HorizontalAlignment="Left" Margin="82,188,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="tb_needQuantity" HorizontalAlignment="Left" Margin="226,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="22" FontSize="14"/>
        <Label Content="Параметр 1:" HorizontalAlignment="Left" Margin="82,216,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="tb_param1" HorizontalAlignment="Left" Margin="226,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="22" FontSize="14"/>
        <Label Content="Параметр 2:" HorizontalAlignment="Left" Margin="82,248,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="tb_param2" HorizontalAlignment="Left" Margin="226,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="22" FontSize="14"/>
        <Button x:Name="btn_count" Content="Рассчитать" HorizontalAlignment="Left" Margin="164,288,0,0" VerticalAlignment="Top" Width="142" Height="26" Background="#FF0C4882" FontSize="16" RenderTransformOrigin="0.5,0.5" Click="btn_count_Click"/>

    </Grid>
</Window>
